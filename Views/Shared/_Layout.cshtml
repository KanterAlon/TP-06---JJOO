<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - JJOO</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="/img/jjoo-logo.png" alt="JJOO Logo">
            </a>
            <ul class="nav-links">
                <li><a href="@Url.Action("Historia", "Home")">Historia</a></li>
                <li><a href="@Url.Action("Deportes", "Home")">Deportes</a></li>
                <li><a href="@Url.Action("Paises", "Home")">Países</a></li>
                <li><a href="@Url.Action("AgregarDeportista", "Home")">Agregar Deportista</a></li>
                <li><a href="@Url.Action("Creditos", "Home")">Créditos</a></li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>&copy; @DateTime.Now.Year - JJOO</p>
    </footer>
</body>
</html>
