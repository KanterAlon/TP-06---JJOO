@{
    ViewBag.Title = "Países";
    var paises = ViewBag.Paises as List<Pais>;
}

<a class="icon-link icon-link-hover" style="color: black;" href="index">
  Home
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-arrow-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
</svg>
</a>


<section class="paises-list">
    <h2>Países Participantes en los Juegos Olímpicos</h2>
    <ul>
        @foreach (var pais in paises)
        {
            <li>
                <a href="@Url.Action("VerDetallePais", "Home", new { idPais = pais.IdPais })">
                    @pais.Nombre
                </a>
            </li>
        }
    </ul>
</section>
