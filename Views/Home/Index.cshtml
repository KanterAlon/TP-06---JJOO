@model List<Deportista>

<!DOCTYPE html>
<html>
<head>
    <title>Lista de Deportistas</title>
</head>
<body>
    <h1>Lista de Deportistas</h1>
    <table>
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Fecha de Nacimiento</th>
                <th>Foto</th>
                <th>País</th>
                <th>Deporte</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deportista in Model)
            {
                <tr>
                    <td>@deportista.Apellido</td>
                    <td>@deportista.Nombre</td>
                    <td>@deportista.FechaNacimiento.ToShortDateString()</td>
                    <td><img src="@deportista.Foto" alt="@deportista.Nombre" width="100" /></td>
                    <td>@deportista.IdPais</td> <!-- Aquí podrías hacer una consulta adicional para obtener el nombre del país -->
                    <td>@deportista.IdDeporte</td> <!-- Aquí podrías hacer una consulta adicional para obtener el nombre del deporte -->
                </tr>
            }
        </tbody>
    </table>
</body>
</html>